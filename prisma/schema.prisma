generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model languages {
  id            String          @id @default(uuid())
  name          String          @unique
  code          String          @unique  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([name, code])
}

model countries {
  id            String          @id @default(uuid())
  code          String          @unique  
  users         users[]
  translations countriesTranslations[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([code])
}

model countriesTranslations {
  id            String          @id @default(uuid())
  name          String          
  country       countries?     @relation(fields: [country_id], references: [id], onDelete: Cascade)
  country_id    String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([name])
}


model users {
  id            String          @id @default(uuid())
  email         String          @unique
  firstName     String
  lastName      String
  password      String?
  refreshToken  String?
  country       countries?      @relation(fields: [country_id], references: [id], onDelete: Cascade)
  country_id    String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([email])
}

